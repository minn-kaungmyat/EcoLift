@model EcoLift.Models.CreateBookingViewModel
@{
    ViewData["Title"] = "Book Your Ride";
}

<div class="booking-page">
    <div class="container">
        <div class="booking-container">
            <!-- Trip Summary Card -->
            <div class="trip-summary-card">
                <div class="trip-header">
                    <h2 class="trip-title">Book Your Ride</h2>
                    <div class="trip-route">
                        <div class="route-point pickup">
                            <i class="fas fa-circle"></i>
                            <span>@Model.Trip?.PickupLocation</span>
                        </div>
                        <div class="route-line">
                            <i class="fas fa-arrow-right"></i>
                        </div>
                        <div class="route-point dropoff">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>@Model.Trip?.DropoffLocation</span>
                        </div>
                    </div>
                </div>

                <div class="trip-details">
                    <div class="detail-row">
                        <div class="detail-item">
                            <i class="fas fa-calendar"></i>
                            <span>@Model.Trip?.DepartureDate.ToString("MMM dd, yyyy")</span>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-clock"></i>
                            <span>@(Model.Trip?.DepartureTime.ToString(@"hh\:mm"))</span>
                        </div>
                    </div>
                    <div class="detail-row">
                        <div class="detail-item">
                            <i class="fas fa-user"></i>
                            <span>@Model.Trip?.Provider.FirstName @Model.Trip?.Provider.LastName</span>
                        </div>
                        <div class="detail-item price">
                            <span>€@Model.Trip?.PricePerSeat per seat</span>
                        </div>
                    </div>
                    @if (Model.Trip?.Vehicle != null)
                    {
                        <div class="detail-row">
                            <div class="detail-item">
                                <i class="fas fa-car"></i>
                                <span>@Model.Trip.Vehicle.Brand @Model.Trip.Vehicle.Model</span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <span>@Model.MaxSeatsAvailable seats available</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Booking Form -->
            <div class="booking-form-card">
                <form method="post" class="booking-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="TripId" />

                    <div class="form-group">
                        <label asp-for="SeatsBooked" class="form-label">Number of Seats</label>
                        <select asp-for="SeatsBooked" class="form-select" asp-items="@(Enumerable.Range(1, Model.MaxSeatsAvailable).Select(i => new SelectListItem(i.ToString(), i.ToString())))">
                        </select>
                        <span asp-validation-for="SeatsBooked" class="text-danger"></span>
                    </div>

                    <div class="price-summary">
                        <div class="price-row">
                            <span>Price per seat:</span>
                            <span>€@Model.Trip?.PricePerSeat.ToString("F2")</span>
                        </div>
                        <div class="price-row">
                            <span>Seats:</span>
                            <span id="seatsCount">1</span>
                        </div>
                        <div class="price-row total">
                            <span>Total:</span>
                            <span id="totalPrice">€@Model.Trip?.PricePerSeat.ToString("F2")</span>
                        </div>
                    </div>

                    <div class="booking-actions">
                        <button type="submit" class="btn-book-confirm">
                            <i class="fas fa-check"></i>
                            Confirm Booking
                        </button>
                        <a href="@Url.Action("Search", "Home")" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>

            <!-- Important Information -->
            <div class="info-card">
                <h3 class="info-title">
                    <i class="fas fa-info-circle"></i>
                    Important Information
                </h3>
                <ul class="info-list">
                    <li>Your booking will be confirmed immediately</li>
                    <li>You can cancel up to 24 hours before departure</li>
                    <li>Meet your driver at the pickup location</li>
                    <li>Payment is handled directly with the driver</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const seatsSelect = document.getElementById('SeatsBooked');
    const seatsCount = document.getElementById('seatsCount');
    const totalPrice = document.getElementById('totalPrice');
    const pricePerSeat = @(Model.Trip?.PricePerSeat ?? 0);

    function updatePrice() {
        const seats = parseInt(seatsSelect.value);
        const total = pricePerSeat * seats;
        
        seatsCount.textContent = seats;
        totalPrice.textContent = '€' + total.toFixed(2);
    }

    seatsSelect.addEventListener('change', updatePrice);
    updatePrice(); // Initialize
});
</script>

