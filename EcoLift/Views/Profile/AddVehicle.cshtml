@model EcoLift.Models.ViewModels.AddVehicleViewModel
@{
    ViewData["Title"] = "Add Vehicle";
    ViewData["HideFooter"] = true;
}

<div class="add-vehicle-page">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="vehicle-form-card">
                    

                    <form asp-action="AddVehicle" asp-controller="Profile" method="post" id="addVehicleForm">
                        @* @Html.AntiForgeryToken() *@
                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="row" >
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Brand" class="form-label">
                                      Brand
                                    </label>
                                    <input asp-for="Brand" class="form-control" placeholder="e.g., BMW, Mercedes, Toyota" 
                                           list="car-brands" autocomplete="off" />
                                    <datalist id="car-brands">
                                        <option value="BMW"></option>
                                        <option value="Mercedes-Benz"></option>
                                        <option value="Audi"></option>
                                        <option value="Toyota"></option>
                                        <option value="Honda"></option>
                                        <option value="Volkswagen"></option>
                                        <option value="Ford"></option>
                                        <option value="Nissan"></option>
                                        <option value="Hyundai"></option>
                                        <option value="Kia"></option>
                                        <option value="Mazda"></option>
                                        <option value="Subaru"></option>
                                        <option value="Volvo"></option>
                                        <option value="Peugeot"></option>
                                        <option value="Renault"></option>
                                        <option value="Citroën"></option>
                                        <option value="SEAT"></option>
                                        <option value="Škoda"></option>
                                        <option value="Opel"></option>
                                        <option value="Fiat"></option>
                                    </datalist>
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Model" class="form-label">
                                       Model
                                    </label>
                                    <input asp-for="Model" class="form-control" placeholder="e.g., 3 Series, C-Class, Corolla" />
                                    <span asp-validation-for="Model" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Color" class="form-label">
                                        Color
                                    </label>
                                    <input asp-for="Color" class="form-control" placeholder="e.g., Black, White, Red" 
                                           list="car-colors" autocomplete="off" />
                                    <datalist id="car-colors">
                                        <option value="Black"></option>
                                        <option value="White"></option>
                                        <option value="Silver"></option>
                                        <option value="Gray"></option>
                                        <option value="Red"></option>
                                        <option value="Blue"></option>
                                        <option value="Green"></option>
                                        <option value="Yellow"></option>
                                        <option value="Orange"></option>
                                        <option value="Purple"></option>
                                        <option value="Brown"></option>
                                        <option value="Gold"></option>
                                        <option value="Beige"></option>
                                        <option value="Maroon"></option>
                                        <option value="Navy"></option>
                                    </datalist>
                                    <span asp-validation-for="Color" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LicensePlate" class="form-label">
                                       License Plate
                                    </label>
                                    <input asp-for="LicensePlate" class="form-control license-plate" 
                                           placeholder="e.g., ABC-123" maxlength="20" />
                                    <span asp-validation-for="LicensePlate" class="text-danger"></span>
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Your license plate helps passengers identify your vehicle
                                    </div>
                                </div>
                            </div>
                        </div>



                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Add Vehicle
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                               Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.add-vehicle-page {
    padding: 2rem 0;
    background: white;
    min-height: 100vh;
}

.vehicle-form-card {
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.2);
}

.form-header {
    text-align: center;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #f1f3f4;
}

.header-icon {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #007bff, #0056b3);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 15px rgba(0,123,255,0.3);
}

.form-header h2 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
    font-weight: 700;
}

.form-header p {
    color: #6c757d;
    margin: 0;
    font-size: 1.1rem;
}

.form-group {
    margin-bottom: 2rem;
}

.form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: center;
    font-size: 1rem;
}

.form-label i {
    color: #007bff;
    width: 20px;
}

.form-control {
    border: 2px solid #e9ecef;
    border-radius: 10px;
    padding: 1rem;
    font-size: 1rem;

    background-color: #fafbfc;
}

.form-control:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.25rem rgba(0,123,255,0.15);
    background-color: white;
}

.form-control:hover {
    border-color: #007bff;
    background-color: white;
}

.license-plate {
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: 'Courier New', monospace;
    font-weight: 600;
}

.form-text {
    font-size: 0.9rem;
    color: #6c757d;
    margin-top: 0.5rem;
    display: flex;
    align-items: center;
}

.form-text i {
    color: #007bff;
}

.form-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #f1f3f4;
}


/* Datalist styling enhancement */
input[list]::-webkit-calendar-picker-indicator {
    display: none;
}

@@media (max-width: 768px) {
    .add-vehicle-page {
        padding: 1rem 0;
    }
    
    .vehicle-form-card {
        padding: 2rem;
        margin: 0 1rem;
    }
    
    .header-icon {
        width: 60px;
        height: 60px;
        font-size: 1.5rem;
    }
    
    .form-actions {
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .form-actions .btn {
        width: 100%;
        min-width: auto;
    }
}

</style>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Auto-format license plate input
        document.querySelector('.license-plate').addEventListener('input', function(e) {
            e.target.value = e.target.value.toUpperCase();
        });
        
        // Debug form submission
        document.querySelector('#addVehicleForm').addEventListener('submit', function(e) {
            console.log('Form submitted!');
            
            // Log all form field values
            const formData = new FormData(this);
            for (let [key, value] of formData.entries()) {
                console.log(`${key}: ${value}`);
            }
            
            // Check if any required fields are empty
            const requiredFields = ['Brand', 'Model', 'LicensePlate', 'Color'];
            let hasEmptyFields = false;
            
            requiredFields.forEach(field => {
                const input = this.querySelector(`[name="${field}"]`);
                if (input) {
                    console.log(`${field} value: "${input.value}"`);
                    if (!input.value.trim()) {
                        console.log(`${field} is empty!`);
                        hasEmptyFields = true;
                    }
                } else {
                    console.log(`Field ${field} not found!`);
                }
            });
            
            if (hasEmptyFields) {
                console.log('Form has empty required fields, preventing submission');
                e.preventDefault();
                return false;
            }
            
            console.log('Form validation passed, allowing submission');
        });
    </script>
}
