@model EcoLift.Models.ViewModels.InboxViewModel
@{
    ViewData["Title"] = "Inbox";
    ViewData["HideFooter"] = true;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h3 mb-0">
                    <i class="fas fa-inbox me-2"></i>Inbox
                </h1>
                <span class="text-muted">@Model.Conversations.Count conversation@(Model.Conversations.Count != 1 ? "s" : "")</span>
            </div>

            @if (!Model.Conversations.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">No conversations yet</h4>
                    <p class="text-muted">When you book a ride or someone books your ride, you'll be able to message each other here.</p>
                    <a asp-controller="Home" asp-action="Search" class="btn btn-primary">
                        <i class="fas fa-search me-2"></i>Find a Ride
                    </a>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="list-group list-group-flush">
                        @foreach (var conversation in Model.Conversations)
                        {
                            <a href="@Url.Action("Chat", "Message", new { conversationId = conversation.ConversationId })" 
                               class="list-group-item list-group-item-action d-flex justify-content-between align-items-start p-3">
                                <div class="d-flex align-items-center flex-grow-1">
                                    <div class="avatar me-3">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-user text-white"></i>
                                        </div>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start mb-1">
                                            <h6 class="mb-0 fw-bold">@conversation.OtherParticipantName</h6>
                                            <small class="text-muted">@conversation.TimeAgo</small>
                                        </div>
                                        <p class="mb-1 text-muted small">@conversation.TripRoute</p>
                                        <p class="mb-0 text-truncate" style="max-width: 300px;">
                                            @conversation.LastMessagePreview
                                        </p>
                                    </div>
                                </div>
                                @if (conversation.UnreadCount > 0)
                                {
                                    <span class="badge bg-primary rounded-pill ms-2">@conversation.UnreadCount</span>
                                }
                            </a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        text-decoration: none;
    }
    
    .list-group-item:active {
        background-color: #e9ecef;
    }
    
    .avatar {
        flex-shrink: 0;
    }
    
    .text-truncate {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
</style>
